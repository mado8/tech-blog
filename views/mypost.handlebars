<div class="header-div">
  <h3 class="comment-header">Comments</h3>
</div>

<div class="comment-section">
  {{#each comments}}
  <div id="comment-div">
    <div class="card mb-3" id="comment">
      <div class="card-header">
        <p>Name</p>
        <p>timestamp</p>
      </div>
      <div class="card-body">
        <p class="card-text">{{this.body}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>

