<div id="blog-post">
  <div id="blog-center">
    <div class="card">
      <div class="card-img"></div>
      <div class="card-img background-white"></div>
      <div class="card-img-overlay">
        <div class="user actions">
          <button id="edit-post-button">âœŽ edit</button>
          <button id="delete-post-button">delete</button>
        </div>
